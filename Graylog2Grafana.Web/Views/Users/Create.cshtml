@using Graylog2Grafana.Web.Models;
@model LoginViewModel
@{
    ViewData["Title"] = "Create user";
}

<div class="row clearfix">
    <div class="col-12">
        <div class="card border-primary">
            <div class="card-header">
                <h5 class="mb-0">
                    New user
                </h5>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Create", "Users", new { }, FormMethod.Post, true, new { role = "form" }))
                {
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-6">
                            <div class="form-group">
                                <label for="Name" class="form-label mt-4">Username</label>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="Description" class="form-label mt-4">Password</label>
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password"  })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ValidationMessage("CustomError", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary mt-3" title="Create">
                        <i class="bi bi-upload"></i>
                    </button>
                }
            </div>
        </div>
    </div>
</div>